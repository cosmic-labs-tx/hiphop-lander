---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";

type Props = {
  highlighted: string;
  title: string;
  subtitle: string;
};

const props = Astro.props;
---

<Container>
  <div class="flex flex-col items-center">
    <h1
      class="text-balance text-center text-5xl font-bold md:text-7xl lg:text-8xl lg:tracking-tight xl:text-7xl xl:tracking-tighter"
    >
      <span class="block text-brand-yellow">{props.highlighted}</span>
      <span> {props.title}</span>
    </h1>
    <p class="mt-8 text-center text-lg font-medium">
      {props.subtitle}
    </p>
    <div class="mt-12 w-full sm:w-auto">
      <Link href="https://course.hiphopdriving.com/preview" class="flex items-center justify-center gap-1"
        >Start Course</Link
      >
    </div>
  </div>
</Container>
